{
  "name": "@full-circle/shared",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "lint": "eslint --fix src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --write src/**/*.{ts,tsx}",
    "prettylint": "yarn typecheck && yarn lint && yarn prettier",
    "precommit": "yarn typecheck && lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,md,html}": "prettier --write"
  }
}
